{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "lib":[
            "es2015",
            "dom",
            "es5"
        ]
    },
    "exclude": [
        "node_modules",
        "jspm_packages"
    ]
}